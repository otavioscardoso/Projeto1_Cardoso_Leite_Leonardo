import tkinter as tk

class Musica:
    def __init__(self):
        self.window_musica = tk.Tk()
        self.window_musica.config(background = 'purple1')
        self.window_musica.title("Modo música")
        self.window_musica.geometry("1500x1500")
        
       
        self.window_musica.rowconfigure(0, minsize=10, weight=1)
        self.window_musica.rowconfigure(1, minsize=10, weight=1)
        self.window_musica.rowconfigure(2, minsize=10, weight=1)
        self.window_musica.rowconfigure(3, minsize=10, weight=1)
        self.window_musica.rowconfigure(4, minsize=10, weight=1)
        self.window_musica.rowconfigure(5, minsize=10, weight=1)
        self.window_musica.rowconfigure(6, minsize=10, weight=1)
        self.window_musica.rowconfigure(7, minsize=10, weight=1)
        
        self.window_musica.columnconfigure(0, minsize=100, weight=1)
        self.window_musica.columnconfigure(1, minsize=100, weight=1)
        self.window_musica.columnconfigure(2, minsize=100, weight=1)
        self.window_musica.columnconfigure(3, minsize=100, weight=1)
        self.window_musica.columnconfigure(4, minsize=100, weight=1)
        self.window_musica.columnconfigure(5, minsize=100, weight=1)
        self.window_musica.columnconfigure(6, minsize=100, weight=1)
        self.window_musica.columnconfigure(7, minsize=100, weight=1)
        self.window_musica.columnconfigure(8, minsize=100, weight=1)
        self.window_musica.columnconfigure(9, minsize=100, weight=1)
        self.window_musica.columnconfigure(10, minsize=100, weight=1)
        

        self.nivel = tk.Label(self.window_musica)
        self.nivel.grid(row=7, column=2, columnspan=1, sticky="nsew")
        self.nivel.configure(text="Nivel:", font='Arial 20', background='snow')
        
        self.titulo = tk.Label(self.window_musica)
        self.titulo.grid(row=0, column=4, columnspan=4, sticky="nsew")
        self.titulo.configure(text = 'Música', fg = 'snow', font='Arial 67', background='navy')

        self.botão0 = tk.Button(self.window_musica)
        self.botão0.grid(row=2, column=1, columnspan=2, rowspan=2, sticky="nsew")
        self.botão0.configure(background = 'yellow')
         
        self.botão1 = tk.Button(self.window_musica)
        self.botão1.grid(row=4, column=1, columnspan=2, rowspan=2, sticky="nsew")
        self.botão1.configure(background = 'green2')
          
        self.botão2 = tk.Button(self.window_musica)
        self.botão2.grid(row=2, column=3, columnspan=2, rowspan=2, sticky="nsew")
        self.botão2.configure(background = 'red')

        self.botão3 = tk.Button(self.window_musica)
        self.botão3.grid(row=4, column=3, columnspan=2, rowspan=2, sticky="nsew")
        self.botão3.configure(background = 'blue')
        
        self.botãoiniciar = tk.Button(self.window_musica)
        self.botãoiniciar.grid(row=7, column=0, sticky="nsew")
        self.botãoiniciar.configure(background = 'snow', text="Iniciar", font='Arial 20')
          

        self.botãomenu = tk.Button(self.window_musica)
        self.botãomenu.grid(row=7, column=1, sticky="nsew")
        self.botãomenu.configure(background = 'snow', text="Menu", font='Arial 20')
        
        self.pergunta = tk.Label(self.window_musica)
        self.pergunta.grid(row=1, column=8, columnspan=2, sticky="nsew")
        self.pergunta.configure(text="Que música está tocando?", font='Arial 20', background='purple1')
        
        
        self.botão4 = tk.Button(self.window_musica)
        self.botão4.grid(row=2, column=8, columnspan=2,sticky="nsew")
        self.botão4.configure(text="Música 1", font='Arial 20', background='snow')
         
        self.botão5 = tk.Button(self.window_musica)
        self.botão5.grid(row=3, column=8, columnspan=2, sticky="nsew")
        self.botão5.configure(text="Música 2", font='Arial 20', background='snow')
          
        self.botão6 = tk.Button(self.window_musica)
        self.botão6.grid(row=4, column=8, columnspan=2,sticky="nsew")
        self.botão6.configure(text= "Música 3", font='Arial 20', background='snow')

        self.botão7 = tk.Button(self.window_musica)
        self.botão7.grid(row=5, column=8, columnspan=2, sticky="nsew")
        self.botão7.configure(text="Música 4", font='Arial 20', background='snow')
        
        
    def quit(self):
        self.window_musica.destroy()
  
    def iniciar_musica(self):
        self.window_musica.mainloop() 

aba = Musica()
aba.iniciar_musica()
