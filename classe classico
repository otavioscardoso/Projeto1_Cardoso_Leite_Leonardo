import tkinter as tk

class Classico:
    def __init__(self):
        self.window = tk.Tk()
        self.window.title("Modo clássico")
        self.window.geometry("700x700")
        self.window.rowconfigure(0, minsize=10, weight=1)
        self.window.rowconfigure(1, minsize=10, weight=1)
        self.window.rowconfigure(2, minsize=10, weight=1)
        self.window.rowconfigure(3, minsize=10, weight=1)
        self.window.rowconfigure(4, minsize=10, weight=1)
        self.window.rowconfigure(5, minsize=10, weight=1)
        self.window.columnconfigure(0, minsize=100, weight=1)
        self.window.columnconfigure(1, minsize=100, weight=1)
        self.window.columnconfigure(2, minsize=100, weight=1)
        self.window.columnconfigure(3, minsize=100, weight=1)
        self.window.columnconfigure(4, minsize=100, weight=1)
        self.window.columnconfigure(5, minsize=100, weight=1)

        self.pontos = tk.Label(self.window)
        self.pontos.grid(row=5, column=3, columnspan=3, sticky="nsew")
        self.pontos.configure(text="Pontos:", font='Symbol 30', background='SpringGreen4')
        
        self.fundo1 = tk.Label(self.window)
        self.fundo1.grid(row=0, column=0, columnspan=5, sticky="nsew")
        self.fundo1.configure(background='SpringGreen4')
        
        self.fundo2 = tk.Label(self.window)
        self.fundo2.grid(row=0, column=0, rowspan=5, sticky="nsew")
        self.fundo2.configure(background='SpringGreen4')
        
        self.fundo3 = tk.Label(self.window)
        self.fundo3.grid(row=0, column=5, rowspan=5, sticky="nsew")
        self.fundo3.configure(background='SpringGreen4')

        self.botão1 = tk.Button(self.window)
        self.botão1.grid(row=1, column=1, columnspan=2, rowspan=2, sticky="nsew")
        self.botão1.configure()
         
        self.botão2 = tk.Button(self.window)
        self.botão2.grid(row=3, column=1, columnspan=2, rowspan=2, sticky="nsew")
        self.botão2.configure()
          
        self.botão3 = tk.Button(self.window)
        self.botão3.grid(row=1, column=3, columnspan=2, rowspan=2, sticky="nsew")
        self.botão3.configure()

        self.botão4 = tk.Button(self.window)
        self.botão4.grid(row=3, column=3, columnspan=2, rowspan=2, sticky="nsew")
        self.botão4.configure()
        
        self.botãoiniciar = tk.Button(self.window)
        self.botãoiniciar.grid(row=5, column=0, sticky="nsew")
        self.botãominiciar.configure(text="Iniciar", font='Symbol 30')
          
        self.botãopausar = tk.Button(self.window)
        self.botãopausar.grid(row=5, column=1,sticky="nsew")
        self.botãopausar.configure(text="Pausar", font='Symbol 30')

        self.botãomenu = tk.Button(self.window)
        self.botãomenu.grid(row=5, column=2, sticky="nsew")
        self.botãomenu.configure(text="Menu", font='Symbol 30')
  
    def iniciar(self):
        self.window.mainloop() 

projeto =Classico()
projeto.iniciar()
